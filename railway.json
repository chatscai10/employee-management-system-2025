{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKER"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "npm start"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "${{ PORT }}"
      }
    }
  }
}