# 檔案上傳設定
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp
UPLOAD_PATH=public/uploads

# GPS 設定
GPS_ACCURACY_THRESHOLD=100
GPS_TIMEOUT=30000

# 系統安全設定
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_LOGIN_MAX=5

# 獎金計算設定
WEEKDAY_BONUS_THRESHOLD=13000
WEEKDAY_BONUS_RATE=0.30
HOLIDAY_BONUS_THRESHOLD=0
HOLIDAY_BONUS_RATE=0.38

# 排班系統設定
SCHEDULE_OPERATION_TIME=300000
SCHEDULE_MAX_DAYS_OFF=8
SCHEDULE_MAX_DAILY_OFF=2
SCHEDULE_MAX_WEEKEND_OFF=3

# 日誌設定
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=10

# Session 設定
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE=86400000

# CORS 設定
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# SSL 設定 (生產環境)
SSL_KEY_PATH=/path/to/private.key
SSL_CERT_PATH=/path/to/certificate.crt

# 監控設定
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60000

# 備份設定
BACKUP_INTERVAL_DAYS=5
BACKUP_EMAIL=chatscai10@gmail.com
BACKUP_RETENTION_DAYS=30

# 開發模式設定
DEBUG=employee:*
SEQUELIZE_LOGGING=true
API_DOCS_ENABLED=true