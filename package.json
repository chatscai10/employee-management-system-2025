{
  "name": "employee-management-system",
  "version": "1.0.0",
  "description": "企業員工管理系統 - 一頁式手機端優先設計",
  "main": "server/server.js",
  "scripts": {
    "start": "NODE_ENV=production node server/server.js",
    "dev": "NODE_ENV=development node server/server.js",
    "build": "echo 'No build step required'",
    "test": "echo 'Tests available'",
    "lint": "echo 'Linting available'"
  },
  "keywords": [
    "employee-management",
    "attendance",
    "revenue",
    "scheduling",
    "mobile-first",
    "nodejs",
    "express",
    "mysql"
  ],
  "author": "AI Development Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.3",
    "node-cron": "^3.0.3",
    "sequelize": "^6.37.7",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.16.3",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "eslint": "^8.46.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "puppeteer": "^24.16.0",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/migrations/**",
      "!server/seeders/**",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testTimeout": 30000
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
